<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <Button
            android:id="@+id/addCarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Car"
            android:onClick="onClick"/>

    <Button
        android:id="@+id/showallCars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="show all cars" />

        <Button
            android:id="@+id/addCarModelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add CarModel"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/addClientButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Manager"
            android:onClick="onClick"/>
    <Button
        android:id="@+id/showallmanagers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show all Managers"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/showallClientButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="show all clients" />



    <Button
        android:id="@+id/showAllCarModels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="show all car models" />

    <Button
        android:id="@+id/showAllBranches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show all brances"
        android:onClick="onClick"/>

</LinearLayout>

